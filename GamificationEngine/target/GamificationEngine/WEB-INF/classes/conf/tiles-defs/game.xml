<tiles-definitions>

    <!-- ********************* Game - Main Template  **************** -->
    <definition name=".mainTemplateGame" template="/WEB-INF/jsp/game/layout/main.jsp">
        <put-attribute name="initializer" value="/WEB-INF/jsp/common/layout/blank.jsp" />
        
        <put-attribute name="head" value="head" />
        
        <put-attribute name="layout" value="/WEB-INF/jsp/common/layout/blank.jsp" />
        <put-attribute name="content" value="/WEB-INF/jsp/common/layout/blank.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/common/layout/blank.jsp" />
    </definition>
    
    <definition name="game.main" extends=".mainTemplateGame">
        <!--put-attribute name="initializer" value="/WEB-INF/jsp/common/layout/blank.jsp" /-->
        
        <put-attribute name="head" value="game.baseHead" />
        
	<!--put-attribute name="layout" value="/WEB-INF/jsp/game/layout/layout.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/game/layout/footer.jsp" /-->
    </definition>


    <!-- Game - Head -->
    <definition name="game.baseHead" template="/WEB-INF/jsp/game/layout/head.jsp">
	<put-attribute name="pageTitle" value="game.title" />
        
        <!--put-attribute name="favicon" value="favicon.ico" /-->
        
        <put-list-attribute name="cssList" inherit="true">
            <add-attribute value="shared.css"/>
        </put-list-attribute>
        
        <!--put-list-attribute name="baseJavascripts">
            <add-attribute value="jquery/jquery.min.js"/>
            <add-attribute value="urlManagement/urlManagement.js"/>
            <add-attribute value="scroll/scroll.js" />
            <add-attribute value="imagesTools/imagesTools.js" />
            <add-attribute value="dialog/dialogTools.js" />
            <add-attribute value="stringTools/stringTokenizer/tokenizer-min.js" />
            <add-attribute value="stringTools/stringTokenizer/stringTokenizer.js" />
        </put-list-attribute-->
    </definition>
    
    <definition name="game.helloGameHead" extends="game.baseHead">
        <!--put-attribute name="firstCSS" value="" />
        <put-attribute name="secondCSS" value="" />
        <put-attribute name="pageCSS" value="" />
        <put-attribute name="printCSS" value="" /-->
        
        <!--put-list-attribute name="cssList" inherit="true">
            <add-attribute value="smoothness/jquery-ui.custom.min.css"/>
        </put-list-attribute-->
        
        <!--put-list-attribute name="javascripts" inherit="true">
            <add-attribute value="jquery/jquery-ui.custom.min.js"/>
            <add-attribute value="dateAndTime/calendar.js"/>
        </put-list-attribute-->
    </definition>

    <definition name="game.baseErrorHead" extends="game.baseHead">
        <!--put-attribute name="firstCSS" value="" />
        <put-attribute name="secondCSS" value="" />
        <put-attribute name="pageCSS" value="" />
        <put-attribute name="printCSS" value="" /-->
    </definition>
    

    <!-- Game -->
    <definition name="game.helloGame" extends="game.main">        
        <put-attribute name="head" value="game.helloGameHead" />
        
        <put-attribute name="content" value="/WEB-INF/jsp/game/helloGame.jsp" />
    </definition>


    <!-- ************************ Errors base *********************** -->
    <definition name="game.baseError" extends="game.main">
        <put-attribute name="head" value="game.baseErrorHead" />
        
        <put-attribute name="layout" value="/WEB-INF/jsp/common/layout/blank.jsp" />
        <put-attribute name="content" value="game.baseContentError" />
        <put-attribute name="footer" value="/WEB-INF/jsp/common/layout/blank.jsp" />
    </definition>
    
    
    <!-- ************************ Errors base contents *********************** -->
    <definition name="game.baseContentError" template="/WEB-INF/jsp/common/error/error.jsp">
        <put-attribute name="errorMessageTitleKey" type="java.lang.String" value="game.error.generic.title" />
    </definition>
    
    <definition name="game.baseContentSessionExpiredError" extends="game.baseContentError">
        <put-attribute name="errorMessageTitleKey" type="java.lang.String" value="game.error.sessionExpired.title" />
    </definition>
    
    
    <!-- ************************ Errors *********************** -->
    <definition name="game.sessionExpiredError" extends="game.baseError">        
        <put-attribute name="content" value="game.baseContentSessionExpiredError" />
    </definition>
</tiles-definitions>