template header
ruleId
points
badgeTitle

package basicBadgeTemplates;

import eu.trentorise.game.model.player.Player;
import eu.trentorise.game.model.backpack.Badge;

template "basicBadgeTemplate"

rule "BasicBadgeRule_@{ruleId}"
    when
        player:Player(points == @{points})
    then
        Badge badge = new Badge("@{badgeTitle}", @{points});
        player.getBadges().add(badge);
end
end template